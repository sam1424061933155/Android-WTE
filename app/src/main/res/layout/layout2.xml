<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="#00000000"
        android:id="@+id/company_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="愛吃醋"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#A0000000"
        android:layout_below="@id/company_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/company_title"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0"
        android:progressTint="#ffffff00"
        android:secondaryProgressTint="#ffffff00"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="13dp"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_toRightOf="@id/company_title"
        android:layout_below="@id/company_logo"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/tag"
        android:scaleType="centerCrop"
        android:layout_below="@id/company_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/company_tag"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美食"
        android:textSize="13dp"
        android:layout_toRightOf="@id/company_tag"
        android:layout_alignTop="@+id/company_tag"
        android:layout_marginLeft="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="詳細資訊"
        android:textSize="16dp"
        android:textColor="#A0000000"
        android:layout_below="@id/company_tag"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/company_detail_tv"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/company_detail_tv"
        android:id="@+id/company_info_bt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司簡介"
        android:textSize="12dp"
        android:textColor="#A0000000"
        android:layout_below="@id/company_info_bt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/company_info_tv"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/company_detail_tv"
        android:id="@+id/company_menu_bt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="菜單介紹"
        android:textSize="12dp"
        android:textColor="#A0000000"
        android:layout_below="@id/company_menu_bt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:id="@+id/company_menu_tv"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/company_detail_tv"
        android:id="@+id/company_comment_bt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="評價評論"
        android:textSize="12dp"
        android:textColor="#A0000000"
        android:layout_below="@id/company_comment_bt"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:id="@+id/company_comment_tv"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FCCC"
        android:layout_marginTop="10dp"
        android:layout_below="@id/company_info_tv"
        android:id="@+id/company_line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推薦菜單"
        android:textSize="16dp"
        android:textColor="#A0000000"
        android:layout_below="@id/company_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/company_good_tv"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:id="@+id/company_good_item_listview"
        android:dividerHeight="0.5dp"
        android:divider="#FCCC"
        android:textSize="20sp"
        android:scrollbars="none"
        android:layout_below="@id/company_good_tv"
        />

</RelativeLayout>